  <!-- Upper Section with White Background -->
  <div class="bg-white ">
    <Container>
      <Sectionhead>
        <Fragment slot="title">Membership</Fragment>
        <Fragment slot="desc"> Simple Pricing. No Surprises. <br/>
        </Fragment>
      </Sectionhead>
      <div class="grid md:grid-cols-2 gap-6 mx-auto max-w-4xl mt-12 mb-12 items-stretch h-full">
        <PricingCard plan={pricing[0]} />
        <PricingCard plan={pricing[1]} />
      </div>
    </Container>
  </div>

  <!-- Lower Section with Custom Background -->
  <div class="bg-black py-12">
    <Container>
      <div class="grid md:grid-cols-3 gap-6 mx-auto max-w-6xl mt-12">
        {pricing.slice(2).map((item) => (
          <PricingCard plan={item} />
        ))}
      </div>
    </Container>
  </div>
</Layout>
