---
import { getCollection } from "astro:content";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";

---

<Layout title="Events">
  <Container class="w-full">
    <Sectionhead>
      <Fragment slot="title">Events</Fragment>
      <Fragment slot="desc">
        Discover our upcoming public events. Become a member to see private events.
      </Fragment>
    </Sectionhead>

    <iframe src="https://nextcloud.denver.space/apps/calendar/embed/ioCC4mJi9dSsAkDC" class="w-full h-screen mt-12 mb-20" style="height: 90vh;" />
  </Container>
</Layout>