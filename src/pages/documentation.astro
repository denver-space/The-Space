---
import { getCollection } from "astro:content";
import { Picture } from "astro:assets";
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Hero from "@components/hero.astro";

// Filter team entries with 'draft: false' & date before current date
const publishedTeamMembers = await getCollection("team", ({ data }) => {
  return !data.draft && data.publishDate < new Date();
});
---

<Layout title="Documentation">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Documentation</Fragment>
      <Fragment slot="desc"
        >Charter, Member Handbook, and FOSS Documentation.</Fragment
      >
    </Sectionhead>
    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="text-center font-bold text-3xl text-gray-800">
        Member Ownded and Operated
      </h2>
    </div><br />

    </Sectionhead>
  <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="text-center font-bold text-3xl text-gray-800">
        Commitment to Our Values
      </h2>
    </div><br />

  </Sectionhead>
  <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="text-center font-bold text-3xl text-gray-800">
        Open Source the Model
      </h2>
    </div><br />

  <Container>
    <Picture
      src="/assets/hero.png"
      alt="the space logo"
      sizes="(max-width: 800px) 100vw, 400px"
      width={400}
      height={400}
      class="w-full rounded transition group-hover:-translate-y-1 group-hover:shadow-xl bg-white object-cover object-center aspect-square"
    />
  </Container>
</Layout>
