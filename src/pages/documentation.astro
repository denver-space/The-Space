---
// Import necessary components and setup
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
---

<Layout title="Documentation">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Documentation</Fragment>
      <Fragment slot="desc">Explore our comprehensive documentation to learn more about our initiatives and processes.</Fragment>
    </Sectionhead>

    <div class="flex">
      <!-- Sidebar for navigation -->
      <div class="w-64 min-h-screen p-5 bg-gray-200">
        <h3 class="font-bold text-xl mb-5">Documentation</h3>
        <ul>
          <li><a href="/docs/charter" class="block py-2 text-blue-500 hover:text-blue-600">Charter</a></li>
          <li><a href="/docs/member-handbook" class="block py-2 text-blue-500 hover:text-blue-600">Member Handbook</a></li>
          <li><a href="/docs/foss-tech-stack" class="block py-2 text-blue-500 hover:text-blue-600">FOSS Tech Stack Outline</a></li>
        </ul>
      </div>
      <!-- Main content area -->
      <div class="flex-1 p-5">
        <h1>Welcome to Our Documentation</h1>
        <p>This is your starting point to access all the essential documents related to our organization. Select a document from the sidebar to get started.</p>
      </div>
    </div>
  </Container>
</Layout>
