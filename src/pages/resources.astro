---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
---

<Layout title="Resources">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Resources</Fragment>
      <Fragment slot="desc">
        Explore our comprehensive documentation and open source content. Learn about our nonprofit, our technology stack, and our operations.
      </Fragment>
    </Sectionhead>

    <div class="space-y-16 mt-8 mb-20"> <!-- Added mb-10 for margin-bottom -->
      <!-- Nonprofit Documentation Section -->
      <section>
        <h2 class="text-3xl font-bold text-gray-800">Nonprofit Documentation</h2>
        <p class="mt-4 text-lg text-gray-600">
          Discover detailed information about our nonprofit organization, including our 501(c)(3) filing and other important documents.
        </p>
        <ul class="list-disc ml-5 mt-4 text-lg text-gray-600">
          <li><a href="/docs/nonprofit-filing.pdf" class="text-blue-600 hover:underline">501(c)(3) Filing</a></li>
          <li><a href="/docs/nonprofit-bylaws.pdf" class="text-blue-600 hover:underline">Nonprofit Bylaws</a></li>
          <!-- Add more links as needed -->
        </ul>
      </section>

      <!-- Open Source Tech Stack Section -->
      <section>
        <h2 class="text-3xl font-bold text-gray-800">Open Source Tech Stack</h2>
        <p class="mt-4 text-lg text-gray-600">
          Learn about the open source technologies we use to power our organization and our commitment to transparency and collaboration.
        </p>
        <ul class="list-disc ml-5 mt-4 text-lg text-gray-600">
          <li><a href="/docs/open-source-tech-stack.pdf" class="text-blue-600 hover:underline">Tech Stack Documentation</a></li>
          <!-- Add more links as needed -->
        </ul>
      </section>

      <!-- Building Our Organization Section -->
      <section>
        <h2 class="text-3xl font-bold text-gray-800">Building Our Organization</h2>
        <p class="mt-4 text-lg text-gray-600">
          Follow our journey as we built our organization from the ground up, including the challenges we faced and how we overcame them.
        </p>
        <ul class="list-disc ml-5 mt-4 text-lg text-gray-600">
          <li><a href="/docs/building-organization.pdf" class="text-blue-600 hover:underline">Our Journey</a></li>
          <!-- Add more links as needed -->
        </ul>
      </section>

      <!-- Self-Hosting and Operations Section -->
      <section>
        <h2 class="text-3xl font-bold text-gray-800">Self-Hosting and Operations</h2>
        <p class="mt-4 text-lg text-gray-600">
          Detailed documentation on our self-hosting setup, Bitcoin liquidity, and other operational aspects of our organization.
        </p>
        <ul class="list-disc ml-5 mt-4 text-lg text-gray-600">
          <li><a href="/docs/self-hosting.pdf" class="text-blue-600 hover:underline">Self-Hosting Documentation</a></li>
          <li><a href="/docs/bitcoin-liquidity.pdf" class="text-blue-600 hover:underline">Bitcoin Liquidity</a></li>
          <!-- Add more links as needed -->
        </ul>
      </section>

      <!-- Open Source Auditing Section -->
      <section>
        <h2 class="text-3xl font-bold text-gray-800">Open Source Auditing</h2>
        <p class="mt-4 text-lg text-gray-600">
          Access our open source auditing of our Bitcoin treasury and other financial operations to ensure transparency and accountability.
        </p>
        <ul class="list-disc ml-5 mt-4 text-lg text-gray-600">
          <li><a href="/docs/bitcoin-treasury-audit.pdf" class="text-blue-600 hover:underline">Bitcoin Treasury Audit</a></li>
          <!-- Add more links as needed -->
        </ul>
      </section>
    </div>
  </Container>
</Layout>