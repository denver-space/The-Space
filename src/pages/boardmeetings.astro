---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";

// Sample list of PDFs (you can add more as needed)
const boardMeetings = [
  { description: "Board Meeting #11 - September 3, 2024", file: "/assets/docs/boardmeeting_minutes/011_TheSpace_BoardMeeting_09.03.24.pdf", year: 2024 },
  { description: "Board Meeting #10 - August 19, 2024", file: "/assets/docs/boardmeeting_minutes/010_TheSpace_BoardMeeting_08.19.24.pdf", year: 2024 },
  { description: "Board Meeting #9 - August 12, 2024", file: "/assets/docs/boardmeeting_minutes/009_TheSpace_BoardMeeting_08.12.24.pdf", year: 2024 },
  { description: "Board Meeting #8 - August 6, 2024", file: "/assets/docs/boardmeeting_minutes/008_TheSpace_BoardMeeting_08.06.24.pdf", year: 2024 },
  { description: "Board Meeting #7 - August 5, 2024", file: "/assets/docs/boardmeeting_minutes/007_TheSpace_BoardMeeting_08.05.24.pdf", year: 2024 },
  { description: "Board Meeting #6 - July 29, 2024", file: "/assets/docs/boardmeeting_minutes/006_TheSpace_BoardMeeting_07.29.24.pdf", year: 2024 },
  { description: "Board Meeting #5 - July 16, 2024", file: "/assets/docs/boardmeeting_minutes/005_TheSpace_BoardMeeting_07.16.24.pdf", year: 2024 },
  { description: "Board Meeting #4 - July 1, 2024", file: "/assets/docs/boardmeeting_minutes/004_TheSpace_BoardMeeting_07.01.24.pdf", year: 2024 },
  { description: "Board Meeting #3 - June 17, 2024", file: "/assets/docs/boardmeeting_minutes/003_TheSpace_BoardMeeting_06.17.24.pdf", year: 2024 },
  { description: "Board Meeting #2 - May 20, 2024", file: "/assets/docs/boardmeeting_minutes/002_TheSpace_BoardMeeting_05.20.24.pdf", year: 2024 },
  { description: "Board Meeting #1 - April 29, 2024", file: "/assets/docs/boardmeeting_minutes/001_TheSpace_BoardMeeting_04.29.24.pdf", year: 2024 }
];

// Group the meetings by year
const groupedByYear = boardMeetings.reduce((acc, meeting) => {
  if (!acc[meeting.year]) acc[meeting.year] = [];
  acc[meeting.year].push(meeting);
  return acc;
}, {});
---

<Layout title="Board Meeting Minutes">
  <Container>
    <h1 class="text-4xl font-bold mb-6">Board Meeting Minutes</h1>
    <p class="mb-8 text-lg">Below are the published minutes notes from our board meetings, organized by year:</p>

    <!-- Board Meetings List grouped by Year -->
    {Object.keys(groupedByYear).reverse().map(year => (
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-4">{year}</h2>
        <ul class="list-none space-y-4">
          {groupedByYear[year].map(meeting => (
            <li>
              <a href={meeting.file} target="_blank" rel="noopener noreferrer" class="text-blue-600 text-lg hover:underline">
                {meeting.description}
              </a>
            </li>
          ))}
        </ul>
      </div>
    ))}
  </Container>
</Layout>

<style>
  a {
    color: #1d4ed8;
    text-decoration: none;
  }

  a:hover {
    text-decoration: underline;
  }
</style>