---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import OnChainCard from "@components/treasury/onchaincard.astro";
import MercuryCard from "@components/treasury/mercurycard.astro";
import StrikeCard from "@components/treasury/strikecard.astro";
---

<Layout title="Treasury">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Treasury</Fragment>
    </Sectionhead>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10 mt-12 mb-20">
      <OnChainCard />
      <MercuryCard />
      <StrikeCard />
    </div>
  </Container>
</Layout>

<style>
  .section-title h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }
  .bg-gradient {
    background: linear-gradient(135deg, #ffffff, #ffffff);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2), 0 10px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.5s ease;
  }
  .bg-gradient:hover {
    transform: translateY(-5px);
  }
  .faq-gradient {
    background: linear-gradient(135deg, #000000, #000000);
  }
  .doc-card {
    background: linear-gradient(135deg, #FDE3B7, #);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2), 0 10px 20px rgba(0, 0, 0, 0.1);
    transition: transform 0.5s ease;
  }
  .doc-card:hover {
    transform: translateY(-5px);
  }
  .section-title .icon {
    width: 36px;
    height: 36px;
  }
</style>
