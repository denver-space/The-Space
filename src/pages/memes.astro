---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
---

<Layout title="Meme Gallery">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Meme Gallery</Fragment>
      <Fragment slot="desc">
        Enjoy some fun images and memes that highlight the joy we're having and our impact on the community. Scroll through and have a laugh!
      </Fragment>
    </Sectionhead>

    <div class="space-y-16 mt-8">
      <!-- Meme Gallery Section -->
      <section>
        <h2 class="text-3xl font-bold text-gray-800 text-center">Our Memes</h2>
        <p class="mt-4 text-lg text-gray-600 text-center">
          Check out our collection of memes and fun images. We love sharing the joy and impact we're making in the community.
        </p>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-2 gap-8 mt-8">
          <!-- Placeholder Meme 1 -->
          <div class="bg-gray-200 rounded-lg shadow-md p-4 flex flex-col items-center">
            <img src="/assets/memes/always_has_been.jpeg" alt="Meme 1" class="w-full h-auto rounded-lg mb-4" />
            <h3 class="text-xl font-semibold text-gray-800 text-center">Always Has Been</h3>
          </div>

          <!-- Placeholder Meme 2 -->
          <div class="bg-gray-200 rounded-lg shadow-md p-4 flex flex-col items-center">
            <img src="/images/meme2.jpg" alt="Meme 2" class="w-full h-auto rounded-lg mb-4" />
            <h3 class="text-xl font-semibold text-gray-800 text-center">Meme Title 2</h3>
          </div>

          <!-- Placeholder Meme 3 -->
          <div class="bg-gray-200 rounded-lg shadow-md p-4 flex flex-col items-center">
            <img src="/images/meme3.jpg" alt="Meme 3" class="w-full h-auto rounded-lg mb-4" />
            <h3 class="text-xl font-semibold text-gray-800 text-center">Meme Title 3</h3>
          </div>

          <!-- Placeholder Meme 4 -->
          <div class="bg-gray-200 rounded-lg shadow-md p-4 flex flex-col items-center">
            <img src="/images/meme4.jpg" alt="Meme 4" class="w-full h-auto rounded-lg mb-4" />
            <h3 class="text-xl font-semibold text-gray-800 text-center">Meme Title 4</h3>
          </div>

          <!-- Add more placeholder memes as needed -->
        </div>
      </section>
    </div>
  </Container>
</Layout>