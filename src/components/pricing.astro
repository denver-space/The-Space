---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { plan } = Astro.props;
const isComingSoon = plan.name !== "Founding Memeber - Temporary Until Physical Location";
const isTemporaryOption = plan.name === "Founding Memeber - Temporary Until Physical Location";
---

<div class="flex flex-col h-full">
  <div class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-10 px-6 rounded-md relative" style={`min-height: ${isTemporaryOption ? '450px' : '600px'}`}>
    <div class={`absolute top-0 left-0 px-2 py-1 bg-blue-500 text-white rounded-br-md ${isComingSoon ? '' : 'hidden'}`}>Coming Soon</div>
    <div class="text-center mb-8">
      <h4 class="text-lg font-medium text-gray-400">{plan.name}</h4>
      <p class="mt-3 text-4xl font-bold text-black md:text-4xl">
        {plan.price && typeof plan.price === "object" ? plan.price.monthly : plan.price}
      </p>
    </div>
    <div class="flex-grow flex flex-col justify-center">
      <ul class="space-y-4 mx-auto">
        {plan.features.map((item) => (
          <li class="flex items-center gap-3 text-gray-800">
            <Tick class="w-6 h-6" />
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
    <div class="mt-8 flex justify-center">
      <Link href={plan.button.link || "#"} block style={plan.popular ? "primary" : "outline"}>
        {plan.button.text || "Get Started"}
      </Link>
    </div>
  </div>
</div>

<style>
  .flex-grow {
    flex-grow: 1;
  }
</style>