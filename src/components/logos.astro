---
// @ts-ignore
import { Icon } from "astro-icon/components";

// List of sponsor images, their alt text, and URLs
const sponsors = [
  { src: "/assets/sponsors/fedi.png", alt: "Fedi", url: "https://www.fedi.xyz" },
  { src: "/assets/sponsors/compassmining_logo.jpeg", alt: "Compass", url: "https://compassmining.io" },
  { src: "/assets/branding/Logos/TheSpace_Logos_Symbol_4.png", alt: "Support Us", format: "png" },
  { src: "/assets/branding/Logos/TheSpace_Logos_Symbol_4.png", alt: "Support Us", format: "png" },
  { src: "/assets/branding/Logos/TheSpace_Logos_Symbol_4.png", alt: "Support Us", format: "png" },
  { src: "/assets/branding/Logos/TheSpace_Logos_Symbol_4.png", alt: "Support Us", format: "png" },
  { src: "/assets/branding/Logos/TheSpace_Logos_Symbol_4.png", alt: "Support Us", format: "png" },
  // Add more sponsors as needed
];
---

<style>
  .custom-gradient {
    background: linear-gradient(135deg, #E51F5D, #F68830,#F5D54C, #FDE3B7);
  }
  .white-svg {
    filter: invert(100%) sepia(0%) saturate(0%) hue-rotate(0deg) brightness(100%) contrast(100%);
  }
  .sponsors-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: 1rem;
    justify-items: center;
  }
</style>

<div class="mt-24 mb-0 custom-gradient py-12">
  <h2 class="text-center text-white">Supported by bitcoin believers and organizations. Help us spread the word.</h2>
  <div class="sponsors-grid mt-10 mb-2">
    {sponsors.map(sponsor => (
      <a href={sponsor.url} target="_blank" rel="noopener noreferrer" class="block">
        {sponsor.format === 'svg' ? (
          <div class="h-12 w-12 md:h-20 md:w-20 white-svg">
            <img src={sponsor.src} alt={sponsor.alt} class="object-contain h-full w-full" />
          </div>
        ) : (
          <img src={sponsor.src} alt={sponsor.alt} class="h-12 w-12 md:h-20 md:w-20 object-contain" />
        )}
      </a>
    ))}
  </div>
</div>
