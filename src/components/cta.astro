---
import Link from "./ui/link.astro";
---

<div
  class="bg-black p-8 md:px-20 md:py-20 mt-20 mx-auto max-w-7xl rounded-lg flex flex-row justify-around items-center text-center">
  <!-- Upcoming Events Section -->
  <div class="flex flex-col items-center text-center mx-2 px-6"> <!-- Increased horizontal padding -->
    <h2 class="text-white text-4xl md:text-6xl tracking-tight">
      Upcoming Events
    </h2>
    <p class="text-slate-400 mt-4 text-lg md:text-xl">
      See what public and private events are happening next.
    </p>
    <div class="flex mt-5">
      <Link href="/schedule" style="inverted">Schedule</Link>
    </div>
  </div>

  <!-- Join the Movement Section -->
  <div class="flex flex-col items-center text-center mx-2 px-6"> <!-- Increased horizontal padding -->
    <h2 class="text-white text-4xl md:text-6xl tracking-tight">
      Join the Movement
    </h2>
    <p class="text-slate-400 mt-4 text-lg md:text-xl">
      Become a member at one of the fastest growing bitcoin social hubs.
    </p>
    <div class="flex mt-5">
      <Link href="/pricing" style="inverted">Membership</Link>
    </div>
  </div>

  <!-- Support our Community Section -->
  <div class="flex flex-col items-center text-center mx-2 px-6"> <!-- Increased horizontal padding -->
    <h2 class="text-white text-4xl md:text-6xl tracking-tight">
      Support our Community
    </h2>
    <p class="text-slate-400 mt-4 text-lg md:text-xl">
      We're member funded. Your sponsorship and donations help contribute to the mission.
    </p>
    <div class="flex mt-5">
      <Link href="/sponsors" style="inverted">Sponsor Us</Link>
    </div>
  </div>
</div>

