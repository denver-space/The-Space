---
import Link from "./ui/link.astro";
---

<!-- Full-width black background wrapper -->
<div class="bg-black py-4 md:py-8 lg:py-20">
  <!-- Inner container with flex utilities for centering -->
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-center items-center text-center">
    <!-- Wrapper div for spacing and alignment -->
    <div class="flex-1 flex flex-col items-center text-center mx-2 px-4 md:px-6 section-padding">
      <h2 class="text-white text-2xl md:text-4xl lg:text-6xl tracking-tight">
        Upcoming Events
      </h2>
      <p class="text-slate-400 mt-2 md:mt-4 text-sm md:text-lg lg:text-xl">
        See what public and private events are happening next.
      </p>
      <div class="flex mt-2 md:mt-5">
        <Link href="/events" style="inverted">Events</Link>
      </div>
    </div>

    <!-- Wrapper div for spacing and alignment -->
    <div class="flex-1 flex flex-col items-center text-center mx-2 px-4 md:px-6 section-padding">
      <h2 class="text-white text-2xl md:text-4xl lg:text-6xl tracking-tight">
        Join the Movement
      </h2>
      <p class="text-slate-400 mt-2 md:mt-4 text-sm md:text-lg lg:text-xl">
        Become a member. Reap the community benefits.
      </p>
      <div class="flex mt-2 md:mt-5">
        <Link href="/pricing" style="inverted">Membership</Link>
      </div>
    </div>

    <!-- Wrapper div for spacing and alignment -->
    <div class="flex-1 flex flex-col items-center text-center mx-2 px-4 md:px-6 section-padding">
      <h2 class="text-white text-2xl md:text-4xl lg:text-6xl tracking-tight">
        Support our Community
      </h2>
      <p class="text-slate-400 mt-2 md:mt-4 text-sm md:text-lg lg:text-xl">
        Sponsorship and donations help support the mission.
      </p>
      <div class="flex mt-2 md:mt-5">
        <Link href="/sponsors" style="inverted">Support Us</Link>
      </div>
    </div>
  </div>
</div>

<style>
  .section-padding {
    padding-top: 20px;
    padding-bottom: 0px;
  }
  @media (max-width: 768px) {
    .section-padding {
      padding-top: 40px; /* Adjust the value as needed for more padding */
    }
  }
</style>