---
import Link from "./ui/link.astro";
---

<!-- Full-width black background wrapper -->
<div class="bg-black py-4 md:py-8 lg:py-20">
  <!-- Inner container with flex utilities for centering -->
  <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-center items-center text-center">
    <!-- Wrapper div for spacing and alignment -->
    <div class="flex-1 flex flex-col items-center text-center mx-2 px-4 md:px-6 section-padding">
      <h2 class="text-white text-2xl md:text-4xl lg:text-6xl tracking-tight">
        Upcoming Events
      </h2>
      <p class="text-slate-400 mt-2 md:mt-4 text-sm md:text-lg lg:text-xl">
        See what public events are happening at The Space.
      </p>
      <div class="flex mt-2 md:mt-5">
        <Link href="/events" style="inverted">Events</Link>
      </div>
    </div>

    <!-- Wrapper div for spacing and alignment -->
    <div class="flex-1 flex flex-col items-center text-center mx-2 px-4 md:px-6 section-padding">
      <h2 class="text-white text-2xl md:text-4xl lg:text-6xl tracking-tight">
        Join the Movement
      </h2>
      <p class="text-slate-400 mt-2 md:mt-4 text-sm md:text-lg lg:text-xl">
        Become a member of The Space. Enjoy the benefits.
      </p>
      <div class="flex mt-2 md:mt-5">
        <Link href="/pricing" style="inverted">Membership</Link>
      </div>
    </div>

    <!-- Wrapper div for spacing and alignment -->
    <div class="flex-1 flex flex-col items-center text-center mx-2 px-4 md:px-6 section-padding">
      <h2 class="text-white text-2xl md:text-4xl lg:text-6xl tracking-tight">
        Support our Community
      </h2>
      <p class="text-slate-400 mt-2 md:mt-4 text-sm md:text-lg lg:text-xl">
        Sponsorship and donations help support the mission.
      </p>
      <div class="flex mt-2 md:mt-5">
        <Link href="/sponsors" style="inverted">Support Us</Link>
      </div>
    </div>
  </div>

  <!-- Listmonk Newsletter Form -->
  <div class="flex-1 flex flex-col items-center text-center mx-2 px-4 md:px-6 section-padding">
    <form method="post" action="https://listmonk.denver.space/subscription/form" class="listmonk-form text-center">
      <h3 class="text-xl text-white font-bold mb-4 mt-20">Subscribe to Our Newsletter</h3>
      <input type="hidden" name="nonce" />
      <div class="mb-4">
        <input class="w-full p-2 bg-black text-white border-b border-white rounded" type="email" name="email" required placeholder="E-mail" />
      </div>
      <div class="mb-4">
        <input class="w-full p-2 bg-black text-white border-b border-white rounded" type="text" name="name" placeholder="Name / Nym" />
      </div>
      <div class="mb-4">
        <input id="63d75" type="checkbox" name="l" checked value="63d756c7-cb89-49fd-8cc5-f3686cae81dd" />
        <label for="63d75" class="text-white">The Space Public Newsletter</label>
        <p class="text-gray-400 text-sm">Stay in the loop via our public newsletter. Updates on events, media, membership, and more.</p>
      </div>
      <div>
        <input class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded cursor-pointer" type="submit" value="Subscribe" />
      </div>
    </form>
  </div>
</div>

<style>
  .section-padding {
    padding-top: 20px;
    padding-bottom: 0px;
  }
</style>