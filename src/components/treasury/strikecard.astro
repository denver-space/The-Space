---
import { fetchStrikeBalance } from '@utils/api/fetch-strike-balance.js';
import { fetchBitcoinPrice } from '@utils/api/fetch-bitcoin-price.js';

const bitcoinPrice = await fetchBitcoinPrice();
const strikeData = await fetchStrikeBalance(bitcoinPrice);
---
<section class="doc-card bg-white border-4 border-[#ffffff] rounded-lg p-6 transition-transform duration-500 ease hover:transform hover:translate-y-1">
  <div class="section-title flex items-center">
    <h2 class="text-2xl font-semibold leading-snug tracking-tight">Strike Balance</h2>
  </div>
  <div class="text-lg leading-relaxed text-gray-500 mt-3">
    <p class="text-3xl font-bold">${strikeData.usdBalance.toFixed(2)}</p>
    <p class="text-sm text-gray-500 mt-2">${strikeData.btcBalance.toFixed(8)} BTC</p>
  </div>
</section>
